# Whisper GUI configuration

# WhisperX model to use by default
WHISPERX_MODEL=medium.en

# Directory for uploads, caches and outputs (will be created automatically)
DATA_DIR=./data

# History storage (choose either SQLAlchemy database URL or TinyDB path)
DATABASE_URL=sqlite:///whisper_history.db
TINYDB_PATH=./data/history.json

# Minimum free space check (in gigabytes)
MIN_DISK_SPACE_GB=2

# Enable Apple Silicon MPS acceleration when available
ENABLE_MPS=false

# External binaries (override if not in PATH)
FFMPEG_PATH=
YTDLP_PATH=
